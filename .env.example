# Database
DATABASE_URL="postgres://user:password@host/dbname"

# Cloudflare R2
R2_ACCOUNT_ID="your-account-id"
R2_ACCESS_KEY_ID="your-access-key"
R2_SECRET_ACCESS_KEY="your-secret-key"
R2_BUCKET_NAME="your-bucket-name"

# R2 Public URL - Use r2.dev subdomain (NOT the S3 API endpoint)
# Format: https://<bucket-name>.<account-hash>.r2.dev
# Get this from Cloudflare Dashboard → R2 → Bucket → Settings → Public Access
R2_PUBLIC_URL="https://your-bucket.xxxxxxxx.r2.dev"

# Example (OLD - Don't use this):
# R2_PUBLIC_URL="https://account-id.r2.cloudflarestorage.com/bucket-name"
